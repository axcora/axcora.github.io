---
layout: layouts/base.njk
---
<div class="container">
<div class="row mt-5">
<div class="col-md-10 mx-auto p-3 p-md-5">
<h1 class="lead col-md-10"><strong><a href="{{page.url}}" title={{title}}"><small>{{title}}</small></a></strong></h1>
<h2 class="title col-md-10"><strong>{{slogan}}</strong></h2>
<p class="mt-3 col-md-10">{{description}}</p>
<p class="mt-3">{{ content | safe }}</p>
</div>
</div>
</div>
<div class="container mb-5 mt-5">
<div class="row justify-content-center">
{% for c in collections.mesinkasir %}
<div class="col-md-4 p-3">
<div class="p-3 p-md-5 border border-primary rounder shadow-sm">
<a href="{{c.url}}" title="{{c.data.title}}"><img class="img-fluid mb-3" alt="{{c.data.title}}" width="100%" height="100%" src="{{c.data.image}}"/></a>
<h3><strong><a href="{{c.url}}" title="{{c.data.title}}">{{c.data.title}}</a></strong></h3>
<p>{{c.data.description}}</p>
</div>
</div>
{% endfor %}
</div>
</div>