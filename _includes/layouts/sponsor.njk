---
layout: layouts/base.njk
---
<div class="container">
<div class="row mt-5">
<div class="col-md-10 mx-auto p-3 p-md-5">
<h1 class="lead"><strong><small><a href="{{page.url}}" title="{{title}}">{{title}}</a></small></strong></h1>
<h2 class="title"><strong>{{intro}}</strong></h2>
<p class="mt-3">{%- for tag in tags | filterTagList %}{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
<a href="{{ tagUrl }}" class="me-1" title="{{ tag }} {{title}}"><small>#{{ tag }}</small></a>
{%- if not loop.last %}{% endif %}{%- endfor %}</p>
<p class="mt-3">{{description}}</p>
</div>
</div>
</div>
<div class="container mb-5 mt-5">
<div class="row">
{% for s in sponsor %}
<div class="col-md-8 mx-auto p-3 p-md-5">
<img class="img-fluid img-sponsor mb-3 bg-white" alt="{{s.name}}" width="300" height="300" src="{{s.image}}"/>
<h3><strong><a href="{{s.link}}" title="{{s.title}}">{{s.name}}</a></strong></h3>
<p>{{s.text}}</p>
<p><a href="{{s.link}}">{{s.button}}</a></p>
</div>
{% endfor %}
</div>
</div>
{% include "widget/sponsor.njk" %}