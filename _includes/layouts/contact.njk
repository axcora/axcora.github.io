---
layout: layouts/base.njk
---
<div class="container">
<div class="row mt-5">
<div class="col-md-8 mx-auto p-3 p-md-5">
<h1 class="lead"><strong><small><a href="{{page.url}}" title="{{title}}">{{title}}</a></small></strong></h1>
<h2 class="title"><strong>{{slogan}}</strong></h2>
<p class="mt-3">{{description}}</p>
</div>
</div>
</div>
<div class="container">
<div class="row">
<div class="col-md-10 mx-auto p-3">
<a href="{{map.link}}" title="axcora showroom" target="_blank">
<img class="img-fluid map-image" alt="{{title}}" width="100%" height="100%" src="{{map.image}}"/>
</a>
</div>
<div class="col-md-10 mx-auto p-3 p-md-5">
<div class="row">
<div class="col-md-6 p-3 p-md-5">
<h3>Formulir Kontak</h3>
<form action="https://airform.io/{{company.email}}" method="post">
<input class="form-control p-1 mt-1 mb-1" type="text" name="name" required placeholder="Masukan Nama">
<input class="form-control p-1 mt-1 mb-1" type="text" name="name" required placeholder="No Whatsapp">
<input class="form-control p-1 mt-1 mb-1" type="text" name="name" required placeholder="Judul Pesan">
<textarea class="form-control p-1 mt-1 mb-1" rows="5" name="message" placeholder="Masukan Pesan disini"></textarea>
<button class="btn btn-primary mt-3 col-md-6 col-12">Kirim Pesan</button>
</form>
</div>
<div class="col-md-1"></div>
<div class="col-md-5 p-3 p-md-5">
<h3><strong>
{{company.name}}
</strong></h3>
<p class="mt-3">
<strong>Showroom </strong><br/>
{{company.address}}<br/>
{{company.city}}<br/>
{{company.country}}
</p>
<p><strong>Phone / Whatsapp </strong><br/>{{company.phone}}</p>
<p><strong>Email </strong><br/>{{company.email}}</p>
</div>
</div>
</div>
</div>
</div>