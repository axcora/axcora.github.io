---
layout: layouts/base.njk
---
<div class="container">
<div class="row mt-5">
<div class="col-md-10 mx-auto p-3 p-md-5">
<h1 class="lead col-md-10"><strong><a href=""><small>{{title}}</small></a></strong></h1>
<h2 class="title col-md-10"><strong>{{slogan}}</strong></h2>
<p class="mt-3 col-md-10">{{description}}</p>
<p class="mt-3">{{ content | safe }}</p>
</div>
</div>
</div>
<div class="container mb-5 mt-5">
<div class="row">
{% for p in intro %}
<div class="col-md-4 p-3">
<div class="p-3 p-md-5 border border-primary rounder shadow-sm">
<img class="img-fluid icon bg-dark p-3 rounder border border-primary mb-3 shadow-sm" alt="{{p.title}} {{metadata.title}}" width="60" height="60" src="{{p.icon}}"/>
<h3><strong><a href="{{metadata.url}}" title="{{p.title}}">{{p.title}}</a></strong></h3>
<p>{{p.text}}</p>
</div>
</div>
{% endfor %}
</div>
</div>
<div class="container mb-5 mt-5">
<div class="row">
{% for c in product %}
<div class="col-md-10 mx-auto p-3 p-md-5">
<h3><strong><a href="{{c.link}}" title="{{c.title}}">{{c.title}}</a></strong></h3>
<p>{{c.text}}</p>
<p><a href="{{c.link}}">{{c.button}}</a></p>
</div>
{% endfor %}
</div>
</div>
{% include "widget/sponsor.njk" %}