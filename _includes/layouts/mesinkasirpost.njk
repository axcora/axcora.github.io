---
layout: layouts/base.njk
---
<div class="container">
<div class="row mt-5">
<div class="col-md-10 mx-auto p-3 p-md-5">
<h1 class="lead"><strong><small><a href="{{page.url}}" title="{{title}}">{{title}}</a></small></strong></h1>
<h2 class="title"><strong>{{intro}}</strong></h2>
<p class="mt-3">{%- for tag in tags | filterTagList %}{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
<a href="{{ tagUrl }}" class="me-1" title="{{ tag }} {{title}}"><small>#{{ tag }}</small></a>
{%- if not loop.last %}{% endif %}{%- endfor %}</p>
<p class="mt-3">{{description}}</p>
<p class="mt-3">
<a href="{{video}}" class="btn btn-primary"> Run Demo Mesin Kasir</a>
</p>
</div>
</div>
</div>
<div class="container">
<div class="row">
<div class="col-md-10 mx-auto p-3 p-md-5">
<img class="img-fluid bg-white mb-5 col-md-6" alt="{{title}}" width="100%" height="100%" src="{{image}}"/>
{{content |safe }}
<p class="mt-5">
<a href="{{buy.ecwid}}" class="btn btn-primary">Pesan Sekarang</a> 
<a href="{{buy.whatsapp}}" class="btn btn-outline-primary">Whatsapp Order</a>
</p>
</div>
</div>
</div>

<div class="col-md-8 mx-auto">
{%- if collections.mesinkasir %}
{%- set previousPost = collections.mesinkasir | getPreviousCollectionItem %}
{%- set nextPost = collections.mesinkasir | getNextCollectionItem %}
{%- if nextPost or previousPost %}
<div class="row">
<div class="col-md-6 p-3">
{%- if previousPost %}
<div class="row p-1 bg-dark rounder">
<div class="col-md-4 p-1">
<a href="{{ previousPost.url }}"><img class="img-fluid bg-white p-1" src="{{ previousPost.data.image }}" alt="{{ previousPost.data.title }}" width="100%" height="100%"/></a>
</div>
<div class="col-md-8 p-3">
<p><small>← Terbaru</small></p>
<h3><a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a></h3>
</div>
</div>
{% endif %}
</div>
<div class="col-md-6 p-3">
{%- if nextPost %}
<div class="row p-1 bg-dark rounder">
<div class="col-md-8 p-3 text-end">
<p><small>Selanjutnya →</small></p>
<h3><a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a></h3>
</div>
<div class="col-md-4 p-1">
<a href="{{ nextPost.url }}"><img class="img-fluid bg-white p-1" src="{{ nextPost.data.image }}" alt="{{ nextPost.data.title }}" width="100%" height="100%"/></a>
</div>
</div>
{% endif %}
</div>
</div>
{%- endif %}
{%- endif %}
</div>